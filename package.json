{
  "name": "@rispa/ui-kit",
  "rispa:name": "ui",
  "version": "4.0.4",
  "description": "complete ui kit for csssr projects",
  "main": "index.js",
  "rispa:activator": "./activator/index.js",
  "rispa:generators": "./generators/index.js",
  "repository": {
    "url": "https://github.com/csssr-team/csssr-ui-kit.git",
    "type": "git"
  },
  "author": "Andrew Laiff <q.laiff@gmail.com>",
  "scripts": {
    "stylelint": "stylelint atoms/**/*.sss molecules/**/*.sss styles/**/*.sss",
    "test": "yarn sb-config && yarn jest",
    "test:update": "yarn sb-config && jest -u",
    "test:watch": "yarn sb-config && jest --watch",
    "test:coverage": "yarn sb-config && jest --coverage",
    "storybook": "yarn sb-config && better-npm-run start-storybook",
    "sb": "yarn sb-config && better-npm-run start-storybook",
    "build-storybook": "yarn sb-config && better-npm-run build-storybook",
    "sb-config": "node ./bin/storybook.js",
    "g": "plop",
    "lint": "rispa-eslint .",
    "lint:fix": "rispa-eslint . --fix"
  },
  "devDependencies": {
    "@kadira/react-storybook-addon-info": "^3.4.0",
    "@kadira/storybook": "^2.35.3",
    "@kadira/storybook-addon-comments": "^1.9.1",
    "@kadira/storybook-addon-knobs": "^1.7.1",
    "@kadira/storybook-addon-notes": "^1.0.1",
    "@kadira/storybook-addon-options": "^1.0.2",
    "@olistic/storyshots": "^3.3.1",
    "@rispa/eslint-config": ">=3.0.0",
    "babel-jest": "^19.0.0",
    "babel-register": "^6.26.0",
    "babel-loader": "7.1.1",
    "better-npm-run": "^0.0.15",
    "browser-resolve": "^1.11.2",
    "enzyme": "^2.8.0",
    "jest": "^20.0.4",
    "react-addons-test-utils": "^15.4.2",
    "react-storybook-addon-backgrounds": "^0.0.7",
    "resolve": "^1.3.2",
    "stylelint": "^7.10.1",
    "stylelint-config-standard": "^16.0.0",
    "webpack-hot-middleware": "^2.18.0"
  },
  "dependencies": {
    "@rispa/core": "4.0.4",
    "@rispa/render-server": "4.0.4",
    "@rispa/webpack": "4.0.4",
    "autoprefixer": "^6.7.7",
    "classnames": "^2.2.5",
    "fbjs": "^0.8.12",
    "loader-utils": "^1.1.0",
    "plop": "^1.7.4",
    "postcss": "^5.2.16",
    "postcss-autoreset": "^1.2.1",
    "postcss-color-function": "^3.0.0",
    "postcss-custom-properties": "^5.0.2",
    "postcss-for": "^2.1.1",
    "postcss-import": "^9.1.0",
    "postcss-initial": "^1.5.3",
    "postcss-loader": "^1.3.3",
    "postcss-nested": "^1.0.0",
    "prop-types": "^15.5.6",
    "react": "^15.4.2",
    "react-container-query": "^0.9.1",
    "react-dom": "^15.4.2",
    "react-slider": "^0.7.0",
    "storyshots": "^3.2.2",
    "sugarss": "^0.2.0"
  },
  "jest": {
    "resolver": "<rootDir>/jest/resolver.js",
    "moduleDirectories": [
      "node_modules",
      "atoms",
      "modules",
      "__test__"
    ],
    "testPathIgnorePatterns": [
      "node_modules"
    ],
    "moduleNameMapper": {
      "^.+\\.sss$": "<rootDir>/.storybook/stylesMock.js",
      "^.+\\.jpg$": "<rootDir>/.storybook/imgMock.js"
    },
    "transform": {
      "^.+\\.js$": "<rootDir>/jest/transform.js"
    },
    "transformIgnorePatterns": [
      "node_modules"
    ],
    "collectCoverageFrom": [
      "atoms/**/*.js",
      "molecules/**/*.js",
      "!**/*.stories.js",
      "!**/*.mock.js",
      "!**/index.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    }
  },
  "betterScripts": {
    "start-storybook": {
      "command": "start-storybook -s ./ -p 9001",
      "env": {
        "NODE_ENV": "development"
      }
    },
    "build-storybook": {
      "command": "build-storybook -o build/storybook",
      "env": {
        "NODE_ENV": "storybook"
      }
    }
  }
}